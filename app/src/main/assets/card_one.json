  "background": "#ff0000",
  "padding": "16dp",
  "layout_margin": "1dp",
  "orientation": "vertical",
  "children": [
    {
      "widget": "TextView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "background": "#0000ff",
